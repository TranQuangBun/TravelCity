<?xml version="1.0" encoding="utf-8"?>
<!--layout for user/allcategories-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserDashBoard.AllCategories"
    android:background="@color/PrimaryColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

<!--        header - icon part -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

            <ImageView
                android:id="@+id/back_pressed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/turnback_icon"
                android:padding="15dp"
                android:layout_centerVertical="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search_icon"
                android:padding="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Danh mục"
            android:textSize="30sp"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/black"
            android:textAllCaps="true"
            android:padding="10dp"/>

<!--        Card view part -->

        <RelativeLayout
            android:layout_marginBottom="40dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#B82020">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="22dp"
                android:layout_marginTop="0dp"
                android:fontFamily="sans-serif-condensed"
                android:padding="25dp"
                android:text="Khách sạn"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="54dp"
                android:layout_marginBottom="10dp"
                android:background="#C15C5C"
                android:padding="20dp"
                android:text="Xem thêm" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="17dp"
                android:layout_marginBottom="0dp"
                android:src="@drawable/store_categories" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="40dp"
            android:background="#2C44BD">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0dp"
                android:layout_marginRight="27dp"
                android:fontFamily="sans-serif-condensed"
                android:padding="25dp"
                android:text="Bệnh viện"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="230dp"
                android:layout_marginBottom="9dp"
                android:background="#557FBD"
                android:padding="20dp"
                android:text="Xem thêm" />

            <ImageView
                android:layout_width="147dp"
                android:layout_height="143dp"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="-1dp"
                android:src="@drawable/doctor_categories" />


        </RelativeLayout>

        <RelativeLayout
                android:layout_marginBottom="40dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="#47A5A5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="0dp"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="25dp"
                    android:text="Khách sạn"
                    android:textColor="@color/black"
                    android:textSize="30sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="54dp"
                    android:layout_marginBottom="10dp"
                    android:background="#59CAAF"
                    android:padding="20dp"
                    android:text="Xem thêm" />

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="17dp"
                    android:layout_marginBottom="0dp"
                    android:src="@drawable/hotel_delete_bg" />

            </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="40dp"
            android:background="#C8971D">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0dp"
                android:layout_marginRight="27dp"
                android:fontFamily="sans-serif-condensed"

                android:padding="25dp"
                android:text="Nhà hàng"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="230dp"
                android:layout_marginBottom="9dp"
                android:background="#CAA934"
                android:padding="20dp"
                android:text="Xem thêm" />

            <ImageView
                android:layout_width="147dp"
                android:layout_height="143dp"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="-1dp"
                android:src="@drawable/restaurant_piza" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_marginBottom="40dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#459151">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="22dp"
                android:layout_marginTop="0dp"
                android:fontFamily="sans-serif-condensed"
                android:padding="25dp"
                android:text="Thuê Xe"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="44dp"
                android:layout_marginBottom="9dp"
                android:background="#609C35"
                android:padding="20dp"
                android:text="Xem thêm" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="17dp"
                android:layout_marginBottom="0dp"
                android:src="@drawable/rent_car" />


        </RelativeLayout>



    </LinearLayout>
</ScrollView>